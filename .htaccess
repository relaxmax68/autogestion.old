RewriteEngine On
RewriteBase /Dropbox/Github/autogestion


# gestion des erreurs
ErrorDocument 404 /erreur.php


# gestion des routes

RewriteRule ^(.*)/(.*)/(.*)/$	    controleur.php?d1=$1&d2=$2&d3=$3  		[QSA]
RewriteRule ^(.*)/(.*)/$	    	controleur.php?d1=$1&d2=$2    	 		[QSA]
RewriteRule ^(.*)/$               	controleur.php?d1=$1            		[QSA]
RewriteRule ^accueil$               controleur.php?d1=accueil          		[QSA]

